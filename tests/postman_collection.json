{
  "info": {
    "name": "CI Demo Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health"
      },
      "event": [{
        "listen": "test",
        "script": { "exec": ["pm.test('status is 200', function () { pm.response.to.have.status(200); });"] }
      }]
    },
    {
      "name": "Create Item",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\"name\":\"demo-item\"}" },
        "url": "{{base_url}}/items"
      },
      "event": [{
        "listen": "test",
        "script": { "exec": ["pm.test('created 201', function () { pm.response.to.have.status(201); });"] }
      }]
    },
    {
      "name": "List Items",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/items"
      },
      "event": [{
        "listen": "test",
        "script": { "exec": ["pm.test('list is 200', function () { pm.response.to.have.status(200); });"] }
      }]
    }
  ]
}
